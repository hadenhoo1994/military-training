<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.iutils.sys.dao.SessionsDao">

    <sql id="SessionColumns">
        a.id as "id",
        a.session as "session",
        a.create_date as "createDate"
    </sql>

    <sql id="SessionJoins">

    </sql>

    <select id="get" resultType="cn.iutils.sys.entity.Sessions">
        SELECT
        <include refid="SessionColumns"/>
        FROM sys_sessions a
        WHERE a.id = #{id}
    </select>

    <!-- 回去在线会话列表 每次100条 -->
    <select id="findList" resultType="cn.iutils.sys.entity.Sessions">
        SELECT
        <include refid="SessionColumns"/>
        FROM sys_sessions a
        <where>
            <if test="createDate!=null">
                and a.create_date > #{createDate}
            </if>
        </where>
        order by a.create_date asc limit 100
    </select>

    <select id="count" resultType="int">
        SELECT count(1) FROM sys_sessions a
        <include refid="SessionJoins"/>
        <where>

        </where>
    </select>

    <select id="findPage" resultType="cn.iutils.sys.entity.Sessions">
        SELECT
        <include refid="SessionColumns"/>
        FROM sys_sessions a
        <include refid="SessionJoins"/>
        <where>

        </where>
        <if test="page.orderBy!=''">
            ORDER BY ${page.orderBy} LIMIT ${page.pageNo*page.pageSize},${page.pageSize}
        </if>
    </select>

    <insert id="insert">
        insert into sys_sessions(
        id,
        create_date,
        session
        )
        values(
        #{id},
        #{createDate},
        #{session}
        )
    </insert>

    <update id="update">
        update sys_sessions set session=#{session}
        where id=#{id}
    </update>

    <delete id="delete">
        delete from sys_sessions where id=#{id}
    </delete>
</mapper>
